#!/usr/bin/env bash

set -uo pipefail;

function early_death() {
  echo "[FATAL] ${0}: ${1}" >&2;
  exit 1;
};

if [ -z "${GMENV_ROOT:-""}" ]; then
  readlink_f() {
    local target_file="${1}";
    local file_name;

    while [ "${target_file}" != "" ]; do
      cd "$(dirname ${target_file})" || early_death "Failed to 'cd \$(dirname ${target_file})' while trying to determie GMENV_ROOT";
      file_name="$(basename "${target_file}")" || early_death "Failed to 'basename \"${target_file}\"' while trying to determine GMENV_ROOT";
      target_file="$(readlink "${file_name}")"
    done;

    echo "$(pwd -P)/${file_name}";
  };

  GMENV_ROOT="$(cd "$(dirname "$(readlink_f "${0}")")/.." && pwd)";
  [ -n ${GMENV_ROOT} ] || early_death "Failed to 'cd \"\$(dirname \"\$(readlink_f \"${0}\")\")/..\" && pwd' while trying to determine GMENV_ROOT";
else
  GMENV_ROOT="${GMENV_ROOT%/}";
fi;
export GMENV_ROOT;

if [ -n "${GMENV_HELPERS:-""}" ]; then
  log 'debug' 'GMENV_HELPERS is set, not sourcing helpers again';
else
  [ "${GMENV_DEBUG:-0}" -gt 0 ] && echo "[DEBUG] Sourcing helpers from ${GMENV_ROOT}/lib/helpers.sh";
  if source "${GMENV_ROOT}/lib/helpers.sh"; then
    log 'debug' 'Helpers sourced successfully';
  else
    early_death "Failed to source helpers from ${GMENV_ROOT}/lib/helpers.sh";
  fi;
fi;

# Ensure libexec and bin are in $PATH
for dir in libexec bin; do
  case ":${PATH}:" in
    *:${GMENV_ROOT}/${dir}:*) log 'debug' "\$PATH already contains '${GMENV_ROOT}/${dir}', not adding it again";;
    *) 
      log 'debug' "\$PATH does not contain '${GMENV_ROOT}/${dir}', prepending and exporting it now";
      export PATH="${GMENV_ROOT}/${dir}:${PATH}";
      ;;
  esac;
done;

declare arg="${1:-""}";

log 'debug' "Setting GMENV_DIR to ${PWD}";
export GMENV_DIR="${PWD}"

abort() {
  log 'debug' 'Aborting...';
  {
    if [ "${#}" -eq 0 ]; then
      cat -;
    else
      echo "gmenv: ${*}";
    fi;
  } >&2;
};

log 'debug' "gmenv argument is: ${arg}";

case "${arg}" in
  "")
    log 'debug' 'No argument provided, dumping version and help and aborting';
    {
      gmenv---version;
      gmenv-help;
    } | abort && exit 1;
exit 1;
    ;;
  -v | --version )
    log 'debug' 'gmenv version requested...';
    exec gmenv---version;
    ;;
  -h | --help )
    log 'debug' 'gmenv help requested...';
    exec gmenv-help;
    ;;
  *)
    log 'debug' "Long argument provided: ${arg}";
    command_path="$(command -v "gmenv-${arg}" || true)";
    log 'debug' "Resulting command-path: ${command_path}";
    if [ -z "${command_path}" ]; then
      {
        echo "No such command '${arg}'";
        gmenv-help;
      } | abort && exit 1;
    fi;
    shift 1;
    log 'debug' "Exec: \"${command_path}\" \"$*\"";
    exec "${command_path}" "$@";
    ;;
esac;

log 'error' 'This line should not be reachable. Something catastrophic has occurred';